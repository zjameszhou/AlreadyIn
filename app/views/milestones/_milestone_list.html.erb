<div class="section">
  <h3>Milestones</h3>
  <table class="striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Deadline</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @project.milestones.each do |milestone| %>
      <tr>
        <td><%= milestone.name %></td>
        <td><%= milestone.deadline %></td>
        <td><%= milestone.status %></td>
        <td>
          <%= link_to (content_tag(:i, nil, class: 'fas fa-folder-open')), [milestone.project, milestone] %> &nbsp;&nbsp;&nbsp;
          <%= link_to (content_tag(:i, nil, class: 'fas fa-trash-alt')), [milestone.project, milestone], method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
